%article
  %h3
    = @post.title
  %h6
    Written by #{@post.author.username}
  .row
    .large-10.columns
      %p
        = @post.body
      %ul.button-group
        = link_to 'Back', root_path, :class => "button"
        = link_to 'Edit', edit_post_path(@post), :class => "button"        
%hr/
%h2 Comments
= render @post.comments
%h2 Add a comment:
= render 'comments/form' 